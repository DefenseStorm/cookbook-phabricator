/var/tmp/phd/log/*.log {
    daily
    missingok
    rotate 7
    compress
    delaycompress
    notifempty
    create 640 <%= node['phabricator']['user'] %> <%= node['phabricator']['group'] %>
    sharedscripts
    prerotate
        /etc/init.d/phd stop >/dev/null
    endscript
    postrotate
        /etc/init.d/phd start >/dev/null
    endscript
}
